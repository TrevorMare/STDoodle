@inherits Shared.DoodleBaseComponent

@if (Show)
{
    <div data-toolbar-header-backgroundpickercomponent="@DataAttributeName" class="toolbar-buttons-container @Theme.ToolbarMenuButtonsContainerClass" @attributes="AdditionalAttributes">
        <div class="toolbar-buttons @Theme.ToolbarMenuButtonsClass">
            <button data-toolbar-header-backgroundpickercomponent-pickbackgroundbutton="@DataAttributeName"
                    class="toolbar-button @Theme.ToolbarMenuButtonClass btn-backgroundpickercomponent-pickbackgrounds" title="Pick Backgrounds"
                    @onclick="@(() => DoodleDrawInteraction.ToggleToolbarContent(ToolbarContent.BackgroundPicker))"> 
                <span class="material-icons">wallpaper</span>
            </button>
        </div>
    </div>
}
