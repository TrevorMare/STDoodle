@inherits Shared.DoodleBaseComponent

<div data-toolbarmenu-resizableimagecomponent="@DataAttributeName" class="doodle-toolbar-panels">  
    <div class="doodle-toolbar-panel">
        <div class="doodle-toolbar-panel-header">
            <span>Select Image</span>
        </div>

        <div class="doodle-toolbar-panel-content">
            <div data-toolbarmenu-resizableimagecomponent-menusources="@DataAttributeName" class="doodle-toolbar-panel-content-wrapper">
                @foreach (var imageSource in ImageSources)
                {
                    <div @onclick="@((e) => { AddResizableContentImage(imageSource).ConfigureAwait(false); OnCloseMenu.InvokeAsync(); })" 
                        class="doodle-resizable-image-container @imageSource.ImageClass" 
                        style="background-image: url('@imageSource.DataSource');"></div>
                }
            </div>
        </div>
    </div>
   
    <div class="doodle-toolbar-panel">
        <div class="doodle-toolbar-panel-header">
            <span>Close</span>
        </div>

        <div class="doodle-toolbar-panel-content">
            <div data-toolbarmenu-resizableimagecomponent-menuclose="@DataAttributeName" class="doodle-toolbar-panel-content-wrapper">
                <button class="btn-round" title="Close"
                        @onclick="@(() => OnCloseMenu.InvokeAsync())"> 
                    <span class="material-icons doodle-toolbar-close">close</span>
                </button>
            </div>
        </div>
    </div>
</div>