@if (Visible && !string.IsNullOrEmpty(BackgroundSource?.DataSource))
{
    if (BackgroundSource.BackgroundSourceType == BackgroundSourceType.Url)
    {
        <div data-doodle-background style="background-image: url(@BackgroundSource.DataSource);" class="doodle-background img @BackgroundSource.BackgroundClass" >
        </div>
    }
    else if (BackgroundSource.BackgroundSourceType == BackgroundSourceType.SVG)
    {
        <div data-doodle-background class="doodle-background svg @BackgroundSource.BackgroundClass" >
            @((MarkupString)BackgroundSource.DataSource)
        </div>
    }
}
